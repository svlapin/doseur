{
  "name": "doseur",
  "version": "1.0.0",
  "description": "Zero-dependency simple queue to run similar operations in batches",
  "main": "./dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "prepublishOnly": "npm run build",
    "build": "tsc",
    "prebuild": "rimraf ./dist",
    "security-check": "npm audit",
    "lint": "tsc --noEmit"
  },
  "author": "Sergey Lapin <sv0lapin@gmail.com>",
  "license": "MIT",
  "keywords": [
    "batch",
    "rate",
    "queue",
    "throttling"
  ],
  "homepage": "https://github.com/svlapin/doseur#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/svlapin/doseur.git"
  },
  "bugs": {
    "url": "https://github.com/svlapin/doseur/issues"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.8",
    "husky": "^3.0.7",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.0",
    "prettier": "1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,ts}": [
      "prettier --write",
      "git add"
    ]
  }
}
